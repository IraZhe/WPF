<UserControl x:Class="Hippodrome.UserControlHorse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hippodrome"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20 px"></RowDefinition>
            <RowDefinition Height="16 px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="textBlockSpeed" FontSize="18" Grid.Row="0" Visibility="Hidden"/>
        <TextBlock Name="textBlockPosition" FontSize="12" Foreground="Red" Grid.Row="1" Visibility="Hidden"/>
        <Image Height="65" Width="100" Source="Resources/horse.jpg" Grid.Row="2" MouseRightButtonDown="Image_MouseRightButtonDown" MouseLeftButtonDown="Image_MouseLeftButtonDown" />

    </Grid>
</UserControl>
